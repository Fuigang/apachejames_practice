package com.kedu.test.emails.emailsender;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

@Repository
public class Email_senderDAO {

    @Autowired
    private SqlSession mybatis;

    private static final String NAMESPACE = "EmailSenderMapper.";

    /**
     * 보낸 메일의 수신자 정보를 email_sender 테이블에 저장합니다.
     * @param emailSenderDto 저장할 수신자 정보 (email_seq 포함)
     */
    public void saveSender(EmailSenderDto emailSenderDto) {
        mybatis.insert(NAMESPACE + "saveSender", emailSenderDto);
    }
}
