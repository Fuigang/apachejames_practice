<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="EmailboxMapper">

    <select id="findEmailboxSeqByEmailAndType" parameterType="map" resultType="int">
        SELECT emailbox_seq 
        FROM emailbox 
        WHERE member_email = #{member_email} AND emailbox_type = #{emailbox_type}
    </select>
	<insert id="createEmailbox" parameterType="Email_boxDTO">
    <selectKey keyProperty="emailbox_seq" resultType="int" order="BEFORE">
        SELECT emailbox_seq.NEXTVAL FROM DUAL
    </selectKey>

    INSERT INTO emailbox (
        emailbox_seq, member_email, emailbox_type
    ) VALUES (
        #{emailbox_seq}, #{member_email}, #{emailbox_type}
    )
</insert>
</mapper>