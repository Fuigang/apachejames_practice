package com.kedu.test.emails.email;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class EmailController {

    private final EmailService emailService; // '총괄 매니저'를 호출

    public EmailController(EmailService emailService) {
        this.emailService = emailService;
    }

    @PostMapping("/api/mails/send-test")
    public ResponseEntity<String> sendTestEmail() {
        try {
            // '총괄 매니저'에게 테스트 메일 발송 프로젝트를 시작하라고 지시
            emailService.sendTestMail();
            return ResponseEntity.ok("테스트 메일이 성공적으로 발송되었습니다.");
        } catch (Exception e) {
            e.printStackTrace();
            return ResponseEntity.internalServerError().body("메일 발송 중 오류 발생: " + e.getMessage());
        }
    }
}